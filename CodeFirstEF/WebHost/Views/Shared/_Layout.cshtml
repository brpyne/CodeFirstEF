<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="span12">
                    <ul class="pull-right">
                        <li>@Html.ActionLink("Toys List", "Index", "Toy")</li>
                        <li>@Html.ActionLink("Create Toy", "Create", "Toy")</li>
                    </ul>
                    <h1>Sandbox</h1>
                    @RenderBody()
                </div>
                @Scripts.Render("~/bundles/jquery")
                @RenderSection("scripts", required: false)
            </div>
        </div>
    </body>
</html>